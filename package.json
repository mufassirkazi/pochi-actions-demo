{
  "name": "task-management-api",
  "version": "1.0.0",
  "description": "A simple full-stack demo with Express.js backend and React frontend for task management",
  "main": "src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.ts",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "keywords": [
    "express",
    "react",
    "typescript",
    "task-manager"
  ],
  "author": "Pochi Demo",
  "license": "MIT"
}